datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"] 
}

model Patient {
  id           Int      @id @default(autoincrement())
  uuid         String   @unique @default(uuid())
  firstName    String
  lastName     String
  phone        String?
  address      String?
  birthDate    DateTime
  email        String?
  gender       String?
  
  tenantId     Int      
  tenantUuid   String   
  createdBy    String   

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([tenantId])
}

model MedicalControl {
  id              Int      @id @default(autoincrement())
  uuid            String   @unique @default(uuid())
  patientUUID     String
  userUUID        String
  tenantUUID      String
  appointmentUUID String?  
  speciality      String
  findings        Json     
  diagnosis       String   @db.Text
  schemaVersion   Int      @default(1)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([patientUUID])
  @@index([tenantUUID])
}