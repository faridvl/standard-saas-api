{
  "name": "standard-saas-api-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@prisma",
      "**/@prisma/**",
      "**/prisma",
      "**/prisma/**"
    ]
  },
  "scripts": {
    "local:identity": "yarn workspace @project/identity-service local",
    "local:records": "yarn workspace @project/medical-records local",
    "local:all": "concurrently --kill-others-on-fail \"yarn local:identity\" \"yarn local:records\"",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "lint": "eslint \"packages/**/*.ts\" --fix",
    "format": "prettier --write \"packages/**/*.ts\"",
    "identity:prisma:gen": "yarn workspace @project/identity-service prisma:generate",
    "identity:prisma:migrate": "yarn workspace @project/identity-service prisma:migrate",
    "records:prisma:gen": "yarn workspace @project/medical-records prisma:generate",
    "records:prisma:migrate": "yarn workspace @project/medical-records prisma:migrate"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.0"
  },
  "dependencies": {
    "pg": "^8.17.2"
  }
}
